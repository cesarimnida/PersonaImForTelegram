<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cattledog.im">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.view.BaseLoginActivity" />
        <activity
            android:name=".login.view.PhoneNumberActivity"
            android:label="@string/activity_phone_number" />
        <activity
            android:name=".login.view.AuthCodeActivity"
            android:label="@string/activity_authcode" />
        <activity
            android:name=".login.view.PasswordActivity"
            android:label="@string/activity_password" />
        <activity
            android:name=".chats.view.ChatsActivity"
            android:label="@string/activity_chats" />
        <activity
            android:name=".message.view.MessageActivity"
            android:label="@string/activity_message" />
    </application>

</manifest>